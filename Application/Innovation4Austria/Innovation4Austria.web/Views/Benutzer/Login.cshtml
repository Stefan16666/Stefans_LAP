@model Innovation4Austria.web.Models.LoginModel

@{
    ViewBag.Title = "Login";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
   
            <div class="form-horizontal">
                <div class="container"style="padding:5em">
                    <div class="row">
                        
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="intro-message">
                                    <h1>Willkommen bei Innovation 4 Austria</h1>
                                    <h2>In den richtigen Räumlichkeiten zu ihrem Erfolg</h2>
           
                                </div>
                            </div>
                        </div>
                        <h1 style="font-size:3em">Unsere Topangebote für morgen</h1>
                        @foreach (var raum in Model.WerbeRaeume)
                        {
                            using (Html.BeginForm("BuchungsDetails", "Buchung", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()

                                <div class="col-md-3 Kartenansicht">
                                    <img src="~/Bild/BildZuRaum/@raum.Raum_id" data-toggle="tooltip" title="@raum.Raumbezeichnung" class="imgTag">
                                    <div class="SchriftgroesseKarten">@raum.Raumbezeichnung</div>
                                    <div class="SchriftgroesseKarten">@raum.GebäudeBezeichnung</div>
                                    <div class="SchriftgroesseKarten">€ @raum.Preis,- / Tag</div>
                                </div>
                            }
                        }
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <div class="FontSize">
                                @Html.LabelFor(model => model.Emailadresse, htmlAttributes: new { @class = "control-label col-md-4" })
                                </div>
                                <div class="col-md-4 text-center">
                                    @Html.EditorFor(model => model.Emailadresse, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Emailadresse, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        <div class="form-group">
                            <div class="FontSize">
                                @Html.LabelFor(model => model.Passwort, htmlAttributes: new { @class = "control-label col-md-4" })
                            </div>
                                <div class="col-md-4 text-center">
                                    @Html.EditorFor(model => model.Passwort, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Passwort, "", new { @class = "text-danger" })
                                </div>
                            </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-4">
                            <input type="submit" value="Create" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            </div>
 
}
@Scripts.Render("~/bundles/jqueryval")
@section Scripts {   
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}

