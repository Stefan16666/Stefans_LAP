@model Innovation4Austria.web.Models.KreditkartenModel

@{
    ViewBag.Title = "Bezahlen";
}




@using (Html.BeginForm("Bezahlen", "Rechnung"))
{
    @Html.HiddenFor(x=>x.Monatnummer)
    <div class="container" style="margin-top:10em">
        <h1>Bezahlung</h1>
        <div class="row">
            <div class="FontSize FirmaAnlegen">
                <div class="col-md-4 col-lg-offset-2 raumArt">
                    @Html.LabelFor(x => x.Rechnungsbetrag)
                </div>
                <div class="col-md-2">
                    @Html.DisplayFor(x => x.Rechnungsbetrag)
                </div>
            </div>
        </div>

        <div class="row">
            <div class="FontSize FirmaAnlegen">
                <div class="col-md-4 col-lg-offset-2">
                    @Html.LabelFor(x => x.Vorname)
                </div>
                <div class="col-md-2">
                    <div>
                        @Html.TextBoxFor(x => x.Vorname)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="FontSize FirmaAnlegen">
                <div class="col-md-4 col-lg-offset-2">
                    @Html.LabelFor(x => x.Nachname)
                </div>
                <div class="col-md-2">
                    <div>
                        @Html.TextBoxFor(x => x.Nachname)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="FontSize FirmaAnlegen">
                <div class="col-md-4 col-lg-offset-2">
                    @Html.Label("Kreditkartenart")
                </div>
                <div class="col-md-2">
                    <div>@Html.DropDownListFor(x => x.KreditkartenArtId, new SelectList(Model.KreditkartenBezeichnung, "id", "bezeichnung"))</div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="FontSize FirmaAnlegen">
                <div class="col-md-4 col-lg-offset-2">
                    @Html.LabelFor(x => x.KreditKartenNummer)
                </div>
                <div class="col-md-2">
                    <div>
                        @Html.TextBoxFor(x => x.KreditKartenNummer)
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="FontSize FirmaAnlegen">
                <div class="col-md-4 col-lg-offset-2">
                    @Html.Label("Gültig bis")
                </div>
                <div class="col-md-2">
                    <div>
                        @Html.Label("Monat")
                        @Html.TextBoxFor(x=>x.GültigBisMonat)

                        @Html.Label("Jahr")
                        @Html.TextBoxFor(x => x.GültigBisJahr)
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="FontSize FirmaAnlegen">
                <div class="col-md-4 col-lg-offset-2">
                    @Html.LabelFor(x => x.Prüfnummer)
                </div>
                <div class="col-md-2">
                    <div>
                        @Html.TextBoxFor(x => x.Prüfnummer)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-4">
            <input type="submit" value="Bezahlen" class="btn btn-default" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}



