@model Innovation4Austria.web.Models.FilterModel
@{
    ViewBag.Title = "Laden";
}
@using (Html.BeginForm())
{
    <div class="container" style="margin-top:10em;">
        <div class="row col-md-12 FontSize" onclick="aktualisiereReise">

            <div class="col-md-3">
                <h4 class="color">Buchungszeitraum</h4>
                <input type="text" id="config-demo" class="form-control">
                @*<i class="glyphicon glyphicon-calendar fa fa-calendar"></i>*@
            </div>
            <div class="col-md-2">
                <h4 class="color">Raumart</h4>
                <div style="font-size:1em">@Html.DropDownListFor(x => x.Art, new SelectList(Model.Art, "Id", "Bezeichnung"))</div>
            </div>
   
                <h4 class="color">Ausstattung</h4>
                <table class="col-md-7">
                    <tr>
                        @foreach (var item in Model.Ausstattung)
                        {                          
                            <td><label class="btn btn-primary"><img src="~/Bild/IconZuAusstattung/@item.Id" alt="..." class="img-thumbnail img-check" onclick="auswahl(@item.Id)">
                                @*@Html.CheckBoxFor(x=>item.Auswahl)*@
                                
                                <input type="checkbox" name="Ausstattung_@item.Id" id="item4" value="val1" autocomplete="off" /></label></td>
                        }
                    </tr>                     
              
                </table>

       
        </div> 


        @*<div class="row" id="aktualisiereReise">
                <div class="col-md-12">
                    @Html.Partial("_RaumAnzeigen", Model.AlleRaeume)
                </div>
            </div>*@
    </div>
}
     

        @section scripts
{
            <script type="text/javascript">

                function auswahl(id)
                {
                    alert(id);
                }


                $(document).ready(function () {
                    $('#config-demo').daterangepicker({
                        "startDate": "02/25/2017",
                        "endDate": "03/03/2017"
                    }, function (start, end, label) {
                        console.log("New date range selected: ' +  start.format('DD.MM.YYYY') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')");
                    });
                });
            </script>
        }
