@model Innovation4Austria.web.Models.FilterModel
@{
    ViewBag.Title = "Laden";
}
@using (Html.BeginForm("RaumAuflistung", "Innovation4AustriaMitarbeiter"))
{
    <div class="container" style="margin-top:10em;">
        <div class="row col-md-12 FontSize" onclick="aktualisiereReise" id="buchung_rand">

            <div class="col-md-4">
                <h4 class="color margin_buchung">Buchungszeitraum</h4>
                <input type="text" id="config-demo" class="form-control buchungsZeitraum">
                @*<i class="glyphicon glyphicon-calendar fa fa-calendar"></i>*@
            </div>
            <div class="col-md-2">
                <h4 class="color margin_buchung">Raumart</h4>
                <div>@Html.DropDownListFor(x => x.Art, new SelectList(Model.Art, "Id", "Bezeichnung"), new { @class = "raumArt" })</div>
            </div>
            <div class="col-md-6" id="ausstattung">
                <h4 class="color margin_buchung">Ausstattung</h4>
                <table>

                    <tr>
                        @foreach (var item in Model.Ausstattung)
                        {
                            <td>
                                <label class="btn">
                                    <img src="~/Bild/IconZuAusstattung/@item.Id" alt="..." class="img-thumbnail img-check" data-toggle="tooltip" title="@item.Bezeichnung"  onclick="auswahl(@item.Id)" style="width:2.4em">
                                    @*@Html.CheckBoxFor(x=>item.Auswahl)*@

                                    <input type="checkbox" name="Ausstattung_@item.Id" id="item4" value="val1" autocomplete="off" />
                                </label>
                            </td>
                        }
                    </tr>

                </table>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-4">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>


        @*<div class="row" id="aktualisiereReise">
                <div class="col-md-12">
                    @Html.Partial("_RaumAnzeigen", Model.AlleRaeume)
                </div>
            </div>*@
    </div>

}


@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });


        $(document).ready(function () {
            $('#config-demo').daterangepicker({
                "startDate": "02/25/2017",
                "endDate": "03/03/2017"
            }, function (start, end, label) {
                console.log("New date range selected: ' +  start.format('DD.MM.YYYY') + ' to ' + end.format('YYYY-MM-DD') + ' (predefined range: ' + label + ')");
            });
        });
    </script>
}
