@model Innovation4Austria.web.Models.FirmenModel


@using (Html.BeginForm("FirmenAuflistung", "Innovation4AustriaMitarbeiter", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="fa-border img-rounded" style="margin-bottom:1em">
        <div class="row">
            @*@Html.HiddenFor(x => x.Id)*@
            <p class="col-md-2 FontSize">@Html.EditorFor(x => x.Bezeichnung)</p>
            <p class="col-md-2 col-md-offset-1 FontSize">@Html.EditorFor(x => x.Strasse)</p>
            <p class="col-md-2 col-md-offset-1 FontSize">@Html.EditorFor(x => x.Plz)</p>
            <input type="submit" value="Speichern" class="btn btn-default col-md-1 col-md-offset-1" />
            <p class="col-md-2">@Html.ActionLink("Mitarbeiter", "MitarbeiterBearbeiten", "Innovation4AustriaMitarbeiter", null, new { @class = "btn buttonAction mitarbeiterbtn" })</p>
        </div>

        <div class="row">
            <p class="col-md-2"></p>
            <p class="col-md-offset-1 col-md-2 FontSize">@Html.EditorFor(x => x.Nummer)</p>s
            <p class="col-md-offset-1 col-md-2 FontSize">@Html.EditorFor(x => x.Ort)</p>
            <p class="col-md-offset-1"><div>deaktivieren</div>@Html.CheckBoxFor(x => x.aktiv)</p>
        </div>
    </div>
}
