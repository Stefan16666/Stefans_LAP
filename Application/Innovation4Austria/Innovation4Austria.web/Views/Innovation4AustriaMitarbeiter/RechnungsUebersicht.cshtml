@model List<Innovation4Austria.web.Models.RechnungsuebersichtModel>
@{
    ViewBag.Title = "RechnungsUebersicht";
}

<div class="row" style="margin-top:12em; margin-bottom:2em">
    <div style="font-size:3em">Rechnungsverwaltung</div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <table class="table table-bordered">
            <tr>
                <th style="width:90px; color:white;">Jahr  </th>
                <th style="width:90px; color:white;">Monat</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                using (Html.BeginForm("RechnungenFuerMonatProduzieren", "Innovation4AustriaMitarbeiter", FormMethod.Post))
                {
                    <tr>
                        <td style="width:90px; color:white">@item.Jahr</td>
                        <td style="width:90px; color:white">@item.Monat</td>
                        <td><input name="Monat" value="@item.Monat" type="hidden" /></td>
                        <td><input name="jahr" value="@item.Jahr" type="hidden" /></td>
                        @if (!item.schonBezahlt)
                        {
                            <td style="width:90px; color:white"><input type="submit" value="@item.Bezeichnung" class="btn btn-block" /></td>
                        }
                        else
                        {
                            <td style="width:500px; color:white">@item.Bezeichnung</td>
                        }

                    </tr>

                }
            }
        </table>
    </div>
</div>