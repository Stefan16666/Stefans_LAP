                <div class="FontSize FirmaAnlegen">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Bezeichnung)
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Bezeichnung)
                    </div>
                    <div class="col-md-2">
                        @Html.ValidationMessageFor(x => x.Bezeichnung, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="FontSize FirmaAnlegen">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Strasse)
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Strasse)
                    </div>
                    <div class="col-md-2">
                        @Html.ValidationMessageFor(x => x.Strasse, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="FontSize FirmaAnlegen">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Nummer)
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Nummer)
                    </div>
                    <div class="col-md-2">
                        @Html.ValidationMessageFor(x => x.Nummer, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="FontSize FirmaAnlegen">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Plz)
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Plz)
                    </div>
                    <div class="col-md-2">
                        @Html.ValidationMessageFor(x => x.Plz , "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="FontSize FirmaAnlegen">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.Ort)
                    </div>
                    <div class="col-md-4">
                        @Html.TextBoxFor(x => x.Ort)
