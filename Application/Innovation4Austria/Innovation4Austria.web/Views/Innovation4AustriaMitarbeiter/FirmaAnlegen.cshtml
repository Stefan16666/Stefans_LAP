                    <div class="col-md-2">
                        @Html.ValidationMessageFor(x => x.Ort, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-group FirmaAnlegen">
                <div class="col-md-offset-4 col-md-4">
                    <input type="submit" value="Anlegen" class="btn btn-default" />
                </div>
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}